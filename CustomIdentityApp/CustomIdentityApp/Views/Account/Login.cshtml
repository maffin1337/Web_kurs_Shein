@model CustomIdentityApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

<section class="login_screen">
    <div class="wrapper">
        <div class="login_wrapper">
            <div class="login_form">
                <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <label asp-for="Email"></label><br />
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div>
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="checkbox-group">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                </div>
                <div>
                    <input type="submit" value="Войти" />
                </div>
                <a class="login_form-link" asp-action="Register">Регистрация</a>
                </form>
            </div>
        </div>
    </div>
</section>